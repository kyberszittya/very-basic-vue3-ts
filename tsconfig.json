{
    "compilerOptions": {
      "outDir": "./dist/",
      "noImplicitAny": true,
      "sourceMap": true,
      "module": "es6",
      "target": "es5",
      "strict": true,
      "experimentalDecorators": true,
      "esModuleInterop": true,
      "jsx": "react",
      "allowJs": true,
      "moduleResolution": "node"
    },
    "exclude": [
        "./node_modules"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue",
    ],
  }